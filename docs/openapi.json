components:
  schemas:
    Health:
      type: object
      properties:
        status:
          type: string
        service:
          type: string
      required:
      - service
      - status
    PatchedApproveActionRequest:
      type: object
      properties:
        level:
          type: integer
          default: 1
        comment:
          type: string
    PatchedPurchaseRequestRequest:
      type: object
      properties:
        title:
          type: string
          minLength: 1
          maxLength: 255
        description:
          type: string
        amount:
          type: string
          format: decimal
          pattern: ^-?\d{0,10}(?:\.\d{0,2})?$
        currency:
          type: string
          minLength: 1
          maxLength: 10
        items:
          type: array
          items:
            $ref: '#/components/schemas/RequestItemRequest'
        proforma:
          type: string
          format: binary
          nullable: true
    PatchedUserRequest:
      type: object
      properties:
        username:
          type: string
          minLength: 1
          description: Required. 150 characters or fewer. Letters, digits and @/./+/-/_
            only.
          pattern: ^[\w.@+-]+$
          maxLength: 150
        email:
          type: string
          format: email
          title: Email address
          maxLength: 254
        first_name:
          type: string
          maxLength: 150
        last_name:
          type: string
          maxLength: 150
        password:
          type: string
          writeOnly: true
          nullable: true
          minLength: 1
    PurchaseRequest:
      type: object
      properties:
        id:
          type: integer
          readOnly: true
        title:
          type: string
          maxLength: 255
        description:
          type: string
        amount:
          type: string
          format: decimal
          pattern: ^-?\d{0,10}(?:\.\d{0,2})?$
        currency:
          type: string
          maxLength: 10
        status:
          allOf:
          - $ref: '#/components/schemas/StatusEnum'
          readOnly: true
        created_by:
          type: string
          description: Required. 150 characters or fewer. Letters, digits and @/./+/-/_
            only.
          readOnly: true
        items:
          type: array
          items:
            $ref: '#/components/schemas/RequestItem'
        proforma:
          type: string
          format: uri
          nullable: true
        created_at:
          type: string
          format: date-time
          readOnly: true
      required:
      - amount
      - created_at
      - created_by
      - id
      - status
      - title
    PurchaseRequestRequest:
      type: object
      properties:
        title:
          type: string
          minLength: 1
          maxLength: 255
        description:
          type: string
        amount:
          type: string
          format: decimal
          pattern: ^-?\d{0,10}(?:\.\d{0,2})?$
        currency:
          type: string
          minLength: 1
          maxLength: 10
        items:
          type: array
          items:
            $ref: '#/components/schemas/RequestItemRequest'
        proforma:
          type: string
          format: binary
          nullable: true
      required:
      - amount
      - title
    RequestItem:
      type: object
      properties:
        id:
          type: integer
          readOnly: true
        description:
          type: string
          maxLength: 255
        quantity:
          type: integer
          maximum: 2147483647
          minimum: 0
        unit_price:
          type: string
          format: decimal
          pattern: ^-?\d{0,10}(?:\.\d{0,2})?$
      required:
      - description
      - id
      - unit_price
    RequestItemRequest:
      type: object
      properties:
        description:
          type: string
          minLength: 1
          maxLength: 255
        quantity:
          type: integer
          maximum: 2147483647
          minimum: 0
        unit_price:
          type: string
          format: decimal
          pattern: ^-?\d{0,10}(?:\.\d{0,2})?$
      required:
      - description
      - unit_price
    RoleAssignRequest:
      type: object
      properties:
        user_id:
          type: integer
        role:
          $ref: '#/components/schemas/RoleEnum'
      required:
      - role
      - user_id
    RoleAssignResponse:
      type: object
      properties:
        detail:
          type: string
        user_id:
          type: integer
        role:
          type: string
      required:
      - detail
      - role
      - user_id
    RoleEnum:
      enum:
      - staff
      - approver_level_1
      - approver_level_2
      - finance
      - admin
      type: string
      description: |-
        * `staff` - staff
        * `approver_level_1` - approver_level_1
        * `approver_level_2` - approver_level_2
        * `finance` - finance
        * `admin` - admin
    StatusEnum:
      enum:
      - PENDING
      - APPROVED
      - REJECTED
      type: string
      description: |-
        * `PENDING` - Pending
        * `APPROVED` - Approved
        * `REJECTED` - Rejected
    TokenObtainPair:
      type: object
      properties:
        access:
          type: string
          readOnly: true
        refresh:
          type: string
          readOnly: true
      required:
      - access
      - refresh
    TokenObtainPairRequest:
      type: object
      properties:
        username:
          type: string
          writeOnly: true
          minLength: 1
        password:
          type: string
          writeOnly: true
          minLength: 1
      required:
      - password
      - username
    TokenRefresh:
      type: object
      properties:
        access:
          type: string
          readOnly: true
      required:
      - access
    TokenRefreshRequest:
      type: object
      properties:
        refresh:
          type: string
          writeOnly: true
          minLength: 1
      required:
      - refresh
    User:
      type: object
      properties:
        id:
          type: integer
          readOnly: true
        username:
          type: string
          description: Required. 150 characters or fewer. Letters, digits and @/./+/-/_
            only.
          pattern: ^[\w.@+-]+$
          maxLength: 150
