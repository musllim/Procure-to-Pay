  /api/users/:
    get:
      operationId: users_list
      description: |-
        Admin/manageable User API. Staff can list/create/delete; ordinary users can view/update themselves.

        Endpoints:
        - list (staff only)
        - retrieve (self or staff)
        - create (staff only)
        - update/partial_update (self or staff)
        - destroy (staff only)
        - change_password (POST to /users/{pk}/change_password/)
      tags:
      - users
      security:
      - jwtAuth: []
      - bearerAuth: []
      responses:
        '200':
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/User'
          description: ''
    post:
      operationId: users_create
      description: |-
        Admin/manageable User API. Staff can list/create/delete; ordinary users can view/update themselves.

        Endpoints:
        - list (staff only)
        - retrieve (self or staff)
        - create (staff only)
        - update/partial_update (self or staff)
        - destroy (staff only)
        - change_password (POST to /users/{pk}/change_password/)
      tags:
