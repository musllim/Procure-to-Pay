          application/json:
            schema:
              $ref: '#/components/schemas/PurchaseRequestRequest'
          application/x-www-form-urlencoded:
            schema:
              $ref: '#/components/schemas/PurchaseRequestRequest'
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/PurchaseRequestRequest'
        required: true
      security:
      - jwtAuth: []
      - bearerAuth: []
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/PurchaseRequest'
          description: ''
